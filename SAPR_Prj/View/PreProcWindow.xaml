<Window x:Class="SAPR_Prj.PreProcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:SAPR_Prj"
        mc:Ignorable="d"
        Title="Preprocessor" Height="720" Width="1280">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="36*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="144*"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="425*"/>
        </Grid.ColumnDefinitions>

        <Button Name="BtnAddRods" Grid.Column="2" Grid.Row="1" Content="Add rods" Click="BtnAddRods_Click"></Button>
        <xctk:IntegerUpDown Name="BoxRodsNum" Grid.Column="2" Value="{Binding Path=numOfRods}"></xctk:IntegerUpDown>

        <DataGrid Name="TableRods" Grid.Column="1" 
                  Grid.Row="2" Grid.ColumnSpan="2" 
                  Margin="0,0.151,0.038,360.113" 
                  Grid.RowSpan="2" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Path=Id}"/>
                <DataGridTextColumn Header="Length" Binding="{Binding Path=Length}"/>
            </DataGrid.Columns>
        </DataGrid>




    </Grid>


</Window>
